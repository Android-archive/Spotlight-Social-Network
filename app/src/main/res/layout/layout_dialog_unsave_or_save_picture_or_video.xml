<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:padding="30dp"
    android:layout_margin="30dp"
    android:layout_gravity="center"
    android:background="@drawable/background_rounded_dialog"
    android:layout_height="wrap_content">


    <TextView
        android:layout_margin="6dp"
        android:id="@+id/textViewUsername"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:visibility="gone"
        android:layout_margin="6dp"
        android:layout_below="@+id/textViewUsername"
        android:id="@+id/progressBarDialogSaveOrUnsave"
        android:progressDrawable="@drawable/esaph_progressbar_light"
        android:indeterminate="false"
        android:background="@drawable/esaph_progressbar_light_background"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="50dp"
        android:layout_height="50dp" />


    <TextView
        android:textStyle="bold"
        android:stateListAnimator="@animator/bubble_button_animation"
        android:layout_margin="6dp"
        android:textSize="16sp"
        android:id="@+id/textViewUnsaveSaveDialogStartAction"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:textColor="@color/colorBlack"
        android:background="@drawable/background_rounded_state_true"
        android:layout_below="@+id/progressBarDialogSaveOrUnsave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>