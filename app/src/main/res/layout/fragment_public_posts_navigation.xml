<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBlack"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".navigation.navigationLeftSite.VerticalViewPager.FragmentNavigationLeftSite">


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </androidx.viewpager.widget.ViewPager>


    <esaph.spotlight.Esaph.EsaphDotTabs.DotsIndicator
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/dots_indicatorMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:dotsColor="#C8929292"
        app:dotsCornerRadius="8dp"
        app:dotsSize="16dp"
        app:dotsSpacing="4dp"
        app:dotsWidthFactor="2.5"
        app:selectedDotColor="@color/colorWhite"
        app:progressMode="true" />

</RelativeLayout>