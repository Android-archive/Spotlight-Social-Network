<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:paddingBottom="6dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:stateListAnimator="@animator/bubble_button_animation"
        android:clipToPadding="false"
        android:fitsSystemWindows="true"
        android:tint="@color/colorPrimaryMoments"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/imageViewBack"
        app:srcCompat="@drawable/ic_backward_arrow"
        android:padding="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <esaph.spotlight.Esaph.EsaphCircleImageView.EsaphCircleImageView
        android:layout_below="@+id/imageViewBack"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="3dp"
        android:id="@+id/imageViewEsaphRoundedSaveAll"
        android:layout_centerInParent="true"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:layout_below="@+id/imageViewEsaphRoundedSaveAll"
        android:clipToPadding="false"
        android:fitsSystemWindows="true"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:textSize="18sp"
        android:id="@+id/textViewText"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <TextView
        android:textColor="@color/colorDarkerGrey"
        android:id="@+id/textViewSavedImageCount"
        android:layout_below="@+id/textViewText"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>