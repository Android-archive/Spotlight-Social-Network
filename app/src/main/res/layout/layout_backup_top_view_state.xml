<RelativeLayout
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:background="#fcfcfc"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:clipToPadding="false"
        android:fitsSystemWindows="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/imageViewBack"
        app:srcCompat="@drawable/ic_backward_arrow"
        android:padding="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:clipToPadding="false"
        android:fitsSystemWindows="true"
        android:gravity="center_vertical"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/imageViewBack"
        android:layout_toEndOf="@+id/imageViewBack"
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp" />


    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_below="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <esaph.spotlight.Esaph.EsaphCircleImageView.EsaphCircleImageView
            android:layout_gravity="center"
            android:clipToPadding="false"
            android:fitsSystemWindows="true"
            android:id="@+id/imageViewMain"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <TextView
            android:textSize="18sp"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:clipToPadding="false"
            android:fitsSystemWindows="true"
            android:textColor="@color/colorBlack"
            android:id="@+id/textViewBelowImageBigText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="14sp"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:clipToPadding="false"
            android:fitsSystemWindows="true"
            android:textColor="@color/colorDarkerGrey"
            android:id="@+id/textViewBelowBigText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:textAlignment="center"
            android:padding="6dp"
            android:textSize="12sp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_edittext_main"
            android:layout_gravity="center"
            android:id="@+id/editTextFilterSearch"
            android:layout_width="200dp"
            android:layout_height="30dp" />

    </LinearLayout>


</RelativeLayout>