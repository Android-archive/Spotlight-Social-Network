<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".navigation.spotlight.Chats.PrivateChat.SpotLightTemplates.ChatTemplatesView.ChatTemplatesView">

    <com.google.android.material.tabs.TabLayout
        app:tabGravity="fill"
        app:tabMode="scrollable"
        app:tabTextColor="@color/colorDarkerGrey"
        app:tabSelectedTextColor="@color/colorPrimaryChat"
        app:tabIndicatorColor="@color/colorGrey"
        android:id="@+id/tabLayoutTemplates"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:layout_below="@+id/tabLayoutTemplates"
        android:id="@+id/viewPagerChatTemplates"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.viewpager.widget.ViewPager>

</RelativeLayout>