<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/chatPartnerListViewItemRootView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingEnd="16dp">

    <esaph.spotlight.Esaph.EsaphCircleImageView.EsaphCircleImageView
        android:stateListAnimator="@animator/bubble_button_animation"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/chat_partner_listview_pb"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/chat_partner_listview_pb"
        android:layout_toEndOf="@+id/chat_partner_listview_pb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:ellipsize="end"
            android:layout_marginBottom="0.5dp"
            android:textStyle="bold"
            android:text="Enrique"
            android:singleLine="true"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:id="@+id/chat_partner_listview_benutzername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginTop="0.5dp"
            android:text="vor 2 min"
            android:textSize="15sp"
            android:textColor="#6F6F6F"
            android:id="@+id/chat_partner_letzte_nachricht"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</RelativeLayout>