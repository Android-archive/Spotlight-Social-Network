<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="6dp">

    <ImageView
        android:id="@+id/imageViewSticker"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <ProgressBar
        android:layout_alignRight="@+id/imageViewSticker"
        android:layout_alignEnd="@+id/imageViewSticker"
        android:layout_alignStart="@+id/imageViewSticker"
        android:layout_alignLeft="@+id/imageViewSticker"
        android:layout_alignBottom="@+id/imageViewSticker"
        android:layout_alignTop="@+id/imageViewSticker"
        android:visibility="gone"
        android:id="@+id/progressBarLoading"
        android:progressDrawable="@drawable/esaph_progressbar_light"
        android:indeterminate="false"
        android:background="@drawable/esaph_progressbar_light_background"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageViewSticker"
        android:stateListAnimator="@animator/bubble_button_animation"
        android:layout_marginTop="16dp"
        android:padding="6dp"
        android:textSize="15sp"
        android:gravity="center"
        android:textAlignment="center"
        android:textStyle="bold"
        android:id="@+id/textViewStickerSaveState"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>