<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:id="@+id/relativLayoutRootView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#CEACFF">

    <esaph.spotlight.Esaph.EsaphCircleImageView.EsaphCircleImageView
        android:layout_centerHorizontal="true"
        android:layout_margin="3dp"
        android:id="@+id/imageViewMainPreview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:esc_border_color_background="@color/colorWhite"
        app:esc_border_width="3dp" />

    <TextView
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageViewMainPreview"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:id="@+id/textViewMessageTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textViewMessageTime"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:text="@string/txt_TippeUmOpen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:layout_alignLeft="@+id/imageViewMainPreview"
        android:layout_alignStart="@+id/imageViewMainPreview"
        android:layout_alignRight="@+id/imageViewMainPreview"
        android:layout_alignEnd="@+id/imageViewMainPreview"
        android:layout_alignBottom="@+id/imageViewMainPreview"
        android:layout_alignTop="@+id/imageViewMainPreview"
        android:visibility="gone"
        android:id="@+id/progressBarSmallViewLoading"
        android:progressDrawable="@drawable/esaph_progressbar_light"
        android:indeterminate="false"
        android:background="@drawable/esaph_progressbar_light_background"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="100dp"
        android:layout_height="100dp" />


</RelativeLayout>