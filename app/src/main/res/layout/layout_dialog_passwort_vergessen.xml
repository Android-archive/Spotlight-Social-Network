<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/background_rounded_dialog">

    <EditText
        android:textCursorDrawable="@null"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:padding="6dp"
        android:hint="@string/txt_login_Username"
        android:background="@drawable/rounded_edittext_main"
        android:textColorHint="@color/colorDarkerGrey"
        android:textColor="@color/colorBlack"
        android:inputType="text"
        android:id="@+id/editTextEmailPasswortVergessen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:stateListAnimator="@animator/bubble_button_animation"
        android:layout_marginTop="10dp"
        android:padding="6dp"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:text="@string/txt_login_NeuesPasswortAnfordern"
        android:background="@drawable/background_add_inverted"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/editTextEmailPasswortVergessen"
        android:id="@+id/textViewPasswortRequestAbschicken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>