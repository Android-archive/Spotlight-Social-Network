<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:paddingStart="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="6dp"
        android:paddingEnd="6dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_margin="6dp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/background_search_status"
        android:id="@+id/textViewSearchStatusText"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.wang.avi.AVLoadingIndicatorView
        app:indicatorName="BallScaleMultipleIndicator"
        app:indicatorColor="@color/colorWhite"
        android:padding="6dp"
        android:id="@+id/progressBarSearchStatus"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/textViewSearchStatusText"
        android:layout_alignTop="@+id/textViewSearchStatusText"
        android:layout_alignLeft="@+id/textViewSearchStatusText"
        android:layout_alignStart="@+id/textViewSearchStatusText" />


</RelativeLayout>