<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="50dp">

    <TextView
        android:textSize="13sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center"
        android:text="GeÃ¶ffnet"
        android:padding="16dp"
        android:layout_toStartOf="@+id/checkBoxUserAddedToGallery"
        android:layout_toLeftOf="@+id/checkBoxUserAddedToGallery"
        android:id="@+id/textViewState"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <CheckBox
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:button="@null"
        android:background="@drawable/like_add_selector_list_view"
        android:stateListAnimator="@animator/like_add_animation"
        android:checked="false"
        android:id="@+id/checkBoxUserAddedToGallery"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <TextView
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:textAlignment="center"
        android:gravity="center"
        android:id="@+id/textViewUserSeenOrSaved"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:textColor="@color/colorBlack"
        android:textSize="16sp" />

</RelativeLayout>