<LinearLayout
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <esaph.spotlight.Esaph.EsaphCircleImageView.EsaphCircleImageView
            android:id="@+id/imageViewTop"
            android:layout_centerInParent="true"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <ProgressBar
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:id="@+id/progressBarSmallViewLoading"
            android:progressDrawable="@drawable/esaph_progressbar_light"
            android:indeterminate="false"
            android:background="@drawable/esaph_progressbar_light_background"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/textViewBelowImage"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imageViewTop"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:text="Sommer 2019"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <View
        android:background="@drawable/shadow_line_top_to_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp" />


    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="@string/txt_with"
            android:id="@+id/textViewHashtags"
            android:textColor="@color/colorGrey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewMostCommonFriends"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Mastrubias"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewShowMomentsJahrezeit"
            android:padding="6dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/rounded_grey"
            android:text="@string/txt_dialog_show_moments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>


</LinearLayout>