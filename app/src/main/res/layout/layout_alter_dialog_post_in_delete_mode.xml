<RelativeLayout
    android:gravity="center"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/shitLinearLayout"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/background_rounded_dialog"
        android:padding="30dp"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_margin="6dp"
            android:id="@+id/textViewUsername"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:layout_margin="6dp"
            android:id="@+id/progressBarDialogSaveOrUnsave"
            android:progressDrawable="@drawable/esaph_progressbar_light"
            android:indeterminate="false"
            android:background="@drawable/esaph_progressbar_light_background"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:visibility="visible"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:text="@string/txt_unsave_warning"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <TextView
        android:layout_alignEnd="@+id/shitLinearLayout"
        android:layout_alignRight="@+id/shitLinearLayout"
        android:layout_alignLeft="@+id/shitLinearLayout"
        android:layout_alignStart="@+id/shitLinearLayout"
        android:gravity="center"
        android:text="@string/mdtp_ok"
        android:layout_below="@+id/shitLinearLayout"
        android:textSize="17sp"
        android:id="@+id/textViewUnsaveSaveDialogStartAction"
        android:padding="10dp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/background_rounded_transparency_design"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>