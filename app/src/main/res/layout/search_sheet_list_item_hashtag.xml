<RelativeLayout
    android:stateListAnimator="@animator/bubble_button_animation"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:padding="6dp">
    
    <esaph.spotlight.Esaph.EsaphCircleImageView.EsaphCircleImageView
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageViewHashtagPreview"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/imageViewHashtagPreview"
        android:layout_toEndOf="@+id/imageViewHashtagPreview"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="#BossModus"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:id="@+id/textViewHashtagName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textStyle="bold"
            android:text="53k"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:textSize="15sp"
            android:textColor="@color/colorGrey"
            android:id="@+id/textViewHashtagAnzahl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>