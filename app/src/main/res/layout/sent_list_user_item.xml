<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/sentListUserItemRootView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="@android:color/transparent">

    <esaph.spotlight.Esaph.EsaphCircleImageView.EsaphCircleImageView
        android:layout_marginRight="3dp"
        android:layout_marginEnd="3dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:stateListAnimator="@animator/bubble_button_animation"
        app:esc_border_width="2dp"
        android:id="@+id/imageViewLastPicPreview"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <LinearLayout
        android:layout_toStartOf="@+id/dialogSendInfoTextViewSelectedState"
        android:layout_toLeftOf="@+id/dialogSendInfoTextViewSelectedState"
        android:layout_alignBottom="@+id/imageViewLastPicPreview"
        android:layout_alignTop="@+id/imageViewLastPicPreview"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_toRightOf="@+id/imageViewLastPicPreview"
        android:layout_toEndOf="@+id/imageViewLastPicPreview"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:ellipsize="end"
            android:layout_marginBottom="0.5dp"
            android:textStyle="bold"
            android:text="Enrique"
            android:singleLine="true"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:id="@+id/dialogSendInfoItemUserUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginTop="0.5dp"
            android:text="vor 2 min"
            android:textSize="15sp"
            android:textColor="#4F5C63"
            android:id="@+id/dialogSendInfoItemUserVorname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:padding="6dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="12sp"
        android:textStyle="bold"
        android:id="@+id/dialogSendInfoTextViewSelectedState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>