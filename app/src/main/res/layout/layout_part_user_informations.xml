<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_margin="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:tint="#E2FFFFFF"
        android:background="@drawable/background_viewpager_icons"
        app:srcCompat="@drawable/ic_arrow_down_schrott"
        android:id="@+id/imageViewCloseMasterClassBigViewViewpager"
        android:padding="12dp"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <esaph.spotlight.Esaph.EsaphCircleImageView.EsaphCircleImageView
        android:layout_alignTop="@+id/imageViewCloseMasterClassBigViewViewpager"
        android:layout_toEndOf="@+id/imageViewCloseMasterClassBigViewViewpager"
        android:layout_toRightOf="@+id/imageViewCloseMasterClassBigViewViewpager"
        android:id="@+id/imageViewProfilbild"
        app:esc_border_color_background="@color/colorWhite"
        app:esc_border_width="1dp"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_alignBottom="@+id/imageViewProfilbild"
        android:layout_alignTop="@+id/imageViewProfilbild"
        android:layout_toRightOf="@+id/imageViewProfilbild"
        android:layout_toEndOf="@+id/imageViewProfilbild"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:text="Subrim"
            android:textSize="16sp"
            android:id="@+id/textViewAbsenderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textStyle="bold"
            android:textColor="#D5FFFFFF"
            android:text="vor 45 Minuten"
            android:textSize="13sp"
            android:id="@+id/textViewChatMessageUhrzeit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <CheckBox
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignTop="@+id/imageViewCloseMasterClassBigViewViewpager"
        android:layout_alignBottom="@+id/imageViewCloseMasterClassBigViewViewpager"
        android:padding="12dp"
        android:button="@null"
        android:background="@drawable/like_add_selector_big_view"
        android:stateListAnimator="@animator/like_add_animation"
        android:checked="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:id="@+id/imageViewAddToGallery"
        android:layout_width="40dp"
        android:layout_height="40dp" />

</RelativeLayout>