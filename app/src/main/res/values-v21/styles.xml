<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SpotLightStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActivityTransitions">true</item>
        <item name = "android:windowActionBar">false</item>
        <item name = "android:windowNoTitle">true</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="colorPrimary">@color/colorPrimaryChat</item>
        <item name="alertDialogTheme">@style/AlertDialogThemeEsaph</item>
        <item name="android:windowBackground">@color/colorWhite</item>
    </style>

    <style name="SpotLightStyleTransparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="alertDialogTheme">@style/AlertDialogThemeEsaph</item>
        <item name="android:windowBackground">@null</item>
    </style>


    <style name="SpotLightSplash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/loading_layer</item>
    </style>

    <style name="TransparentBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/TransparentBottomSheetStyle</item>
    </style>

    <style name="TransparentBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>