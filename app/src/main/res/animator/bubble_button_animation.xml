<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <set xmlns:android="http://schemas.android.com/apk/res/android">
            <objectAnimator
                android:duration="50"
                android:propertyName="scaleX"
                android:valueTo="0.925"
                android:valueType="floatType" />
            <objectAnimator
                android:duration="50"
                android:propertyName="scaleY"
                android:valueTo="0.925"
                android:valueType="floatType" />
            <objectAnimator
                android:duration="50"
                android:propertyName="translationZ"
                android:valueTo="-1.5dp"
                android:valueType="floatType" />

        </set>
    </item>

    <item>
        <set>
            <objectAnimator
                android:duration="50"
                android:propertyName="scaleX"
                android:valueTo="1.1"
                android:valueType="floatType" />
            <objectAnimator
                android:duration="50"
                android:propertyName="scaleY"
                android:valueTo="1.1"
                android:valueType="floatType" />
            <objectAnimator
                android:duration="50"
                android:propertyName="translationZ"
                android:valueTo="1dp"
                android:valueType="floatType" />

            <objectAnimator
                android:duration="50"
                android:propertyName="scaleX"
                android:valueTo="1.0"
                android:startOffset="50"
                android:valueType="floatType" />
            <objectAnimator
                android:duration="50"
                android:propertyName="scaleY"
                android:startOffset="50"
                android:valueTo="1.0"
                android:valueType="floatType" />
            <objectAnimator
                android:duration="50"
                android:propertyName="translationZ"
                android:startOffset="50"
                android:valueTo="0dp"
                android:valueType="floatType" />
        </set>
    </item>
</selector>